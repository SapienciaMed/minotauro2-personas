<% if @active_record.present? %>
	$("#personasgiro_<%= @active_record.id %>").replaceWith("<%= j render 'tr', personasgiro: @active_record %>");
<% end %>
$("#personasgiro_form").html("<%= j render 'personasgiros_form' %>");
$(".tooltip").tooltip("hide");
$('[data-toggle="tooltip"]').tooltip();
$("#personasgiro_form").collapse("show");
$(".select2").select2();

$(function() {
    return $('.select2Ciudad').select2({
        minimumInputLength: 3,
        maximumInputLength: 20,
        placeholder: "[ Seleccionar Municipio ]",
        ajax: {
            url: '/personas/search.json',
            dataType: 'json',
            delay: 250,
            data: function(params) {
                return {
                    q: params.term,
                    page: params.page
                };
            },
            processResults: function(data) {
                return {
                    results: $.map(data, function(item) {
                        return {
                            text: item.name,
                            id: item.id
                        };
                    })
                };
            }
        }
    });
});




