<%    @i = 0
      @ii = 0
      @idrecaudoult_teseo = 0

      usr = current_user
      isadmin = usr.id

		cadper = Userspermiso.joins(:objeto).select("objetos.descripcion").where(["userspermisos.user_id = ? and objetos.descripcion in ('detallerecaudo','planesrecaudosdocs','cambiotipopago','reversionavanzada','recaudos_noaplica') and userspermisos.crea = 'S'", isadmin]).map(&:descripcion)

		@auth_detallerecaudo = cadper.include?('detallerecaudo') ? true : false
		@auth_planesrecaudosdocs = cadper.include?('planesrecaudosdocs') ? true : false
		@auth_cambiotipopago = cadper.include?('cambiotipopago') ? true : false
		@auth_reversionavanzada = cadper.include?('reversionavanzada') ? true : false
		@auth_recaudosnoaplica = cadper.include?('recaudos_noaplica') ? true : false

