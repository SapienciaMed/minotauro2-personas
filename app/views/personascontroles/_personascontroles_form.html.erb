
<%= simple_form_for [@persona, @personascontrol], remote: true do |f|   %>
  <div class="bs-callout">
    <div class="row">
      <div class="col-md-3"><%= f.input :tipo_atencion, as: :select, collection: select_tiposatencion, input_html: { data: { width: '100%' }, class: 'select2 clean' }, label: 'Tipo de AtenciÃ³n' %></div>
      <div class="col-md-9"><%= f.input :observacion, as: :text, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean', maxlength: 3999, :rows => "5" }, label: 'Observaciones' %></div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <% if @personascontrol.new_record? %>
          <%= button_tag "#{t :cancelar}", type: 'button', data: { target: '#personascontrol_form' }, class: 'cancel_button btn btn-flat btn-default  pull-left', aria_hidden: true %>
        <% else %>
          <%= link_to "#{t :cancelar}", persona_personascontrol_path(@persona, @personascontrol), class: 'btn btn-flat btn-default pull-left', aria_hidden: true, remote: true %>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= f.button :button, "#{t :guardar}", data: { disable_with: "#{t :procesando}" }, class: 'btn btn-danger pull-right' %>
      </div>
    </div>
  </div>
<% end %>
