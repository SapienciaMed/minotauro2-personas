<div class="flash_messages"></div>
  <div class="box-header">
    <legend>Correo Electronico</legend>
    <div class="box-tools pull-right">
    <% if is_auth_c('personascorreo') %>
      <%= link_to new_persona_personascorreo_path(@persona), remote: true, id: 'new_personascorreo_button', class: 'btn btn-sm btn-success' do %>
       <i class="fa fa-plus-square"> </i> <span><%=t :agregar%></span>
     <% end %>
    <% end %>
    </div>
  </div>
<div id="personascorreo_form" class="collapse"></div>
<div id="personascorreos">
  <% if @persona.personascorreos.any? %>
    <%= render 'personascorreos/tabla' %>
  <% else %>
    <div class="alert alert-warning"><h4><i class="icon fa fa-info"></i> <%=t :atencion%></h4><%=t :atencion_msj%></div>
  <% end %>
</div>
