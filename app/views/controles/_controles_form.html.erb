
<%= simple_form_for [@persona, @control], remote: true do |f|   %>
  <div class="bs-callout">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <%= f.input :tiposcontrol_id, as: :select, collection: Tiposcontrol.order("descripcion").collect { |p| [p.descripcion, p.id] }, input_html: { data: { width: '100%' }, class: 'select2 clean', include_blank: true }, label: 'Tipo de Control' %></div>
      <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
          <%= f.input :fecha, as: :string, input_html: { class: 'datepicker', data: { date_options: { format: 'DD/MM/YYYY', ignoreReadonly: true } }, readonly: true } %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
        <%= f.input :resolucion, as: :string, input_html: {onchange: "javascript:this.value=this.value.toUpperCase();" }, label: 'ResoluciÃ³n recurso' %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
        <%= f.input :repone, as: :select, collection: select_sino, input_html: { data: { width: '100%' }, class: 'select2 clean' }, label: 'Repone?' %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
        <%= f.input :valor_final, as: :string, input_html: {onchange: "javascript:this.value=this.value.toUpperCase();" }, label: 'Saldo pagar' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <% if @control.new_record? %>
          <%= button_tag "#{t :cancelar}", type: 'button', data: { target: '#control_form' }, class: 'cancel_button btn btn-flat btn-default  pull-left', aria_hidden: true %>
        <% else %>
          <%= link_to "#{t :cancelar}", persona_control_path(@persona, @control), class: 'btn btn-flat btn-default pull-left', aria_hidden: true, remote: true %>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= f.button :button, "#{t :guardar}", data: { disable_with: "#{t :procesando}" }, class: 'btn btn-danger pull-right' %>
      </div>
    </div>
  </div>
<% end %>
