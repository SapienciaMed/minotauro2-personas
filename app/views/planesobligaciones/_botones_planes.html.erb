<div align="center">
  <% if planesobligacion.existefac.to_s != 'X' 
      if @auth_factucionsae %>
          <%= link_to extractos_datas_path(anno: planesobligacion.fecha_vence.strftime("%Y").to_s,
                                          mes: planesobligacion.fecha_vence.strftime("%m").to_s,
                                          nro_contrato: planesobligacion.personasobligacion.nro_obligacion,
                                          vcId: planesobligacion.personasobligacion_id
                      ), data: { toggle: 'tooltip', confirm: 'Esta seguro que desea generar la Factura?' }, title: "Facturar", class: "btn btn-xs btn-info" do %>
            <i class="fa fa-file-pdf-o"></i>
          <% end %>
          <%= link_to facturas_personasoblfacturas_path(id: planesobligacion.id), remote: true do %>
            <i class="fa fa-hdd-o" data-toggle="tooltip" style="color:red;" data-original-title="Ver"></i>
          <% end %>
      <% end %>
   <% else %>
    <%= link_to personasoblfestados_path(personasoblfactura_id: planesobligacion.nro_cuota), remote: true, data: { toggle: 'tooltip' }, title: 'Factor - Factura' do %>
      <button class="btn btn-xs btn-primary"><i class="fa fa-tasks" aria-hidden="true"></i></button>
    <% end %>
  <% end %>
  <% if planesobligacion.existeestado.to_s != "" and personasoblfactura.present? %>
    <% if personasoblfactura.url_factura_facture.present? %>
      <%= link_to view_facture_personascontratos_path(personasobligacion_id: planesobligacion.personasobligacion_id, nro_cuota: planesobligacion.nro_cuota), class: 'popup', data: { toggle: 'tooltip' }, title: 'Ver Factura de Pago' do %>
        <button class="btn btn-xs btn-primary"><i class="fa fa-file-pdf-o" aria-hidden="true"></i></button>
      <% end %>
      <% if @auth_factucionsae and planesobligacion.idfactura.present? %>
        <% if !Personasoblfactura.find(planesobligacion.idfactura).valida_seven == 'nopuedeentrar' %>
          <%= link_to enviar_seven_personascontratos_path(personasoblfactura_id: planesobligacion.idfactura, personascontrato_id: @personascontrato.id), remote: true, class: 'edit_personasoblfnota_button', data: { toggle: 'tooltip', disable_with: "Enviando..." }, title: "Enviar Factura Seven" do %>
            <button class="btn btn-xs btn-danger"><i class="fa fa-send"></i></button>
          <% end %>
        <% end %>
      <% end %>
      <%= link_to abrir_personasoblfnotas_path(personasoblfactura_id: planesobligacion.idfactura, nro_cuota: planesobligacion.nro_cuota, personascontrato_id: @personascontrato.id), remote: true, data: { toggle: 'tooltip' }, title: 'Crear Nota' do %>
        <button class="btn btn-xs btn-primary"><i class="fa fa-sticky-note" aria-hidden="true"></i></button>
      <% end %>
      <% if @controlcupones %>
        <%= link_to cupon_personasconcupones_path(nro_cuota: planesobligacion.nro_cuota, personascontrato_id: @personascontrato.id, planesobligacion_id: planesobligacion.id), data: { toggle: 'tooltip' }, remote: true, data: { toggle: 'tooltip' }, title: 'Cupones' do %>
          <button class="btn btn-xs btn-danger"><i class="fa fa-cc-mastercard"></i></button>
        <% end %>
      <% end %>
      <% if personasoblfactura.status_seven_error_inc.present? %>
        <button class="btn btn-xs btn bg-navy"><span data-toggle="tooltip" data-html="true" data-original-title="<div align='left'>Error Incauto: <%= personasoblfactura.status_seven_error_inc rescue nil %></div>"><i class="fa fa-info" aria-hidden="true"></i></span></button>
      <% end %>
      <% if personasoblfactura.status_seven_error.present? %>
        <button class="btn btn-xs btn bg-navy"><span data-toggle="tooltip" data-html="true" data-original-title="<div align='left'>Error Extinto: <%= personasoblfactura.status_seven_error rescue nil %></div>"><i class="fa fa-info" aria-hidden="true"></i></span></button>
      <% end %>
      <% if personasoblfactura.status_seven_incauto.present? %>
        <button class="btn btn-xs btn bg-navy"><span data-toggle="tooltip" data-html="true" data-original-title="<div align='left'>Registro Incauto: <%= personasoblfactura.status_seven_incauto rescue nil %></div>"><i class="fa fa-info" aria-hidden="true"></i></span></button>
      <% end %>
      <% if personasoblfactura.status_seven.present? %>
        <button class="btn btn-xs btn bg-navy"><span data-toggle="tooltip" data-html="true" data-original-title="<div align='left'>Registro Extinto: <%= personasoblfactura.status_seven rescue nil %></div>"><i class="fa fa-info" aria-hidden="true"></i></span></button>
      <% end %>
      <div>
        <% if personasoblfactura.status_facture.to_s != "" %>
          <% if personasoblfactura.status_facture.to_s.include?("ENVIO EXITOSO - ESTADO: true") %>
            <span data-toggle="tooltip" data-html="true" style="color:green;" data-original-title="<div align='left'>StatusFactura: <%= personasoblfactura.status_facture rescue nil %></div>"><i class="fa fa-check" aria-hidden="true"></i></span>
          <% else %>
            <span data-toggle="tooltip" data-html="true" style="color:orange;" data-original-title="<div align='left'>StatusFactura: <%= personasoblfactura.status_facture rescue nil %></div>"><i class="fa fa-warning" aria-hidden="true"></i></span>
          <% end %>
        <% end %>
        <%= link_to facturas_personasoblfacturas_path(id: planesobligacion.id), remote: true do %>
          <i class="fa fa-hdd-o" data-toggle="tooltip" style="color:red;" data-original-title="Ver"></i>
        <% end %>
      </div>
    <% else %>
      <% if @auth_factucionsae %>
        <% if personasoblfactura.status_legal.to_s != "" %>
          <button class="btn btn-xs btn-danger">
            <span data-toggle="tooltip" data-original-title="<%= personasoblfactura.fecha_generacion.strftime("%Y-%m-%d %X") rescue nil %> - <%= personasoblfactura.status_legal.to_s %>"><i class="fa fa-warning thcolorred"></i></span>
          </button>
          <%= link_to restlegal_personascontratos_path(personasoblfactura_id: planesobligacion.idfactura, personascontrato_id: @personascontrato.id), remote: true, class: 'edit_personasoblfnota_button', data: { toggle: 'tooltip', disable_with: "Reconsultando!!!!" }, title: "Reconsultar" do %>
            <button class="btn btn-xs btn-danger"><i class="fa fa-bomb"></i></button>
          <% end %>
        <% else %>
          <%= link_to enviar_factura_personascontratos_path(personasoblfactura_id: planesobligacion.idfactura, personascontrato_id: @personascontrato.id), remote: true, class: 'edit_personasoblfnota_button', data: { toggle: 'tooltip', disable_with: "Enviando..." }, title: "Enviar Factura" do %>
            <button class="btn btn-xs btn-success"><i class="fa fa-send"></i></button>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <div class="modal fade" id="nota<%= planesobligacion.nro_cuota %>">
    <div class="modal-dialog modal-lg" style="width: 1200px">
      <div class="modal-content">
      </div>
    </div>
  </div>
  <div class="modal fade" id="cupon<%= planesobligacion.id %>">
    <div class="modal-dialog modal-lg" style="width: 1000px">
      <div class="modal-content">
      </div>
    </div>
  </div>

</div>