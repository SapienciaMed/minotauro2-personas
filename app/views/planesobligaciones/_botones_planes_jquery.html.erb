<div align="center">
  <% if existefac.to_s != 'X' %>
    <%= link_to extractos_datas_path(anno: planesobligacion.fecha_vence.strftime("%Y").to_s,
                                     mes: planesobligacion.fecha_vence.strftime("%m").to_s,
                                     nro_contrato: planesobligacion.personasobligacion.nro_obligacion,
                                     vcId: planesobligacion.personasobligacion_id
                ), data: { toggle: 'tooltip', confirm: 'Esta seguro que desea generar la Factura?' }, title: "Facturar", class: "btn btn-xs btn-info" do %>
      <i class="fa fa-file-pdf-o"></i>
    <% end %>
  <% else %>
    <%= link_to personasoblfestados_path(personasobligacion_id: planesobligacion.personasobligacion_id, nro_cuota: planesobligacion.nro_cuota), remote: true, data: { toggle: 'tooltip' }, title: 'Factor - Factura' do %>
      <button class="btn btn-xs btn-primary"><i class="fa fa-tasks" aria-hidden="true"></i></button>
    <% end %>
  <% end %>
  <% if existeestado.to_s != "" %>
    <% if personasoblfactura.url_factura_facture.present? %>
      <%= link_to view_facture_personascontratos_path(personasobligacion_id: planesobligacion.personasobligacion_id, nro_cuota: planesobligacion.nro_cuota), class: 'popup', data: { toggle: 'tooltip' }, title: 'Ver Factura de Pago' do %>
        <button class="btn btn-xs btn-primary"><i class="fa fa-file-pdf-o" aria-hidden="true"></i>
        </button>
      <% end %>
      <%= link_to enviar_seven_personascontratos_path(personasoblfactura_id: factura, personascontrato_id: personascontrato.id), remote: true, class: 'edit_personasoblfnota_button', data: { toggle: 'tooltip', disable_with: "Enviando..." }, title: "Enviar Factura Seven" do %>
        <button class="btn btn-xs btn-danger"><i class="fa fa-send"></i></button>
      <% end %>
      <%= link_to abrir_personasoblfnotas_path(personasoblfactura_id: factura, nro_cuota: planesobligacion.nro_cuota, personascontrato_id: personascontrato.id), remote: true, data: { toggle: 'tooltip' }, title: 'Crear Nota' do %>
        <button class="btn btn-xs btn-primary"><i class="fa fa-sticky-note" aria-hidden="true"></i>
        </button>
      <% end %>
    <% else %>
      <% if personasoblfactura.status_legal.to_s != "" %>
        <button class="btn btn-xs btn-danger">
          <span data-toggle="tooltip" data-original-title="<%= personasoblfactura.fecha_generacion.strftime("%Y-%m-%d %X") rescue nil %> - <%= personasoblfactura.status_legal.to_s %>"><i class="fa fa-warning thcolorred"></i></span>
        </button>
        <%= link_to restlegal_personascontratos_path(personasoblfactura_id: factura, personascontrato_id: personascontrato.id), remote: true, class: 'edit_personasoblfnota_button', data: { toggle: 'tooltip', disable_with: "Reconsultando!!!!" }, title: "Reconsultar" do %>
          <button class="btn btn-xs btn-danger"><i class="fa fa-bomb"></i></button>
        <% end %>
      <% else %>
        <%= link_to enviar_factura_personascontratos_path(personasoblfactura_id: factura, personascontrato_id: personascontrato.id), remote: true, class: 'edit_personasoblfnota_button', data: { toggle: 'tooltip', disable_with: "Enviando..." }, title: "Enviar Factura" do %>
          <button class="btn btn-xs btn-success"><i class="fa fa-send"></i></button>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
  <div class="modal fade" id="nota<%= planesobligacion.nro_cuota %>">
    <div class="modal-dialog modal-lg" style="width: 1200px">
      <div class="modal-content">
      </div>
    </div>
  </div>
</div>