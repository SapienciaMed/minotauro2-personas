<%= simple_form_for([@personasobligacion, @personasoblcambio], remote: true) do |f| %>
  <div class="bs-callout">
    <div class="row">
      <div class="col-md-2"><%= f.input :fecha_matricula, as: :datetime_picker, input_html: { data: { date_options: { format: 'DD/MM/YYYY', ignoreReadonly: true } }, readonly: true, class: 'clean' }, label: 'Fecha Matricula' %></div>
      <div class="col-md-2"><%= f.input :valor, as: :moneda, input_html: { class: 'clean' } %></div>
      <div class="col-md-2"><%= f.input :plazo, as: :moneda, input_html: { class: 'clean' } %></div>
      <div class="col-md-2"><%= f.input :tasa_final, as: :moneda, input_html: { class: 'clean' } %></div>
      <div class="col-md-4"><%= f.input :observaciones, as: :text, input_html: { class: 'clean', size: 20 } %></div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <% if @personasoblcambio.new_record? %>
          <%= button_tag "#{t :cancelar}", type: 'button', data: { target: '#personasoblcambio_form' }, class: 'cancel_button btn btn-flat btn-default  pull-left', aria_hidden: true %>
        <% else %>
          <%= link_to "#{t :cancelar}", personasobligacion_personasoblcambio_path(@personasobligacion, @personasoblcambio), class: 'btn btn-flat btn-default pull-left', aria_hidden: true, remote: true %>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= f.button :submit, "#{t :guardar}", data: { disable_with: "#{t :procesando}" }, class: 'btn btn-flat btn-danger pull-right' %>
      </div>
    </div>
  </div>
<% end %>
