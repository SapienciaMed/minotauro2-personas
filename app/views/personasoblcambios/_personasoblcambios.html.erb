<div class="flash_messages"></div>
  <div class="box-header">
    <legend>Recreacion de la obligacion</legend>
    <div class="box-tools pull-right">
    <% if is_auth_e('personasobligacion') and @personasobligacion.saldototaldeuda.to_i > 0 %>
        <%= link_to new_personasobligacion_personasoblcambio_path(@personasobligacion), remote: true, id: 'new_personasoblcambio_button', class: 'btn btn-sm btn-success' do %>
         <i class="fa fa-plus-square"> </i> <span><%=t :agregar%></span>
       <% end %>
    <% end %>
    </div>
  </div>
<div id="personasoblcambio_form" class="collapse"></div>
<div id="personasoblcambios">
  <% if @persona.personasoblcambios.any? %>
    <%= render 'personasoblcambios/tabla' %>
  <% else %>
    <div class="alert alert-warning"><h4><i class="icon fa fa-info"></i> <%=t :atencion%></h4><%=t :atencion_msj%></div>
  <% end %>
</div>
