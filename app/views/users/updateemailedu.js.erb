$(".alert_flash").fadeOut(300, function() {
	$(this).remove();
});

$(".flash_messages").html("<%= j render 'layouts/flash_messages' %>");

$(".form-group").removeClass("has-error");
$(".form-group > .help-block.help-block-error").remove();

setTimeout(function() {
	$(".alert_flash").fadeOut(300, function() {
		$(this).remove();
	});
}, 5000);

