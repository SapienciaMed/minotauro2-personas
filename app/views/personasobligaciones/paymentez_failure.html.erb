<section class="invoice">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="page-header">
        <i class="fa fa-credit-card"></i> Pago Fallido
        <small class="pull-right">Fecha: <%= Time.now.strftime('%d-%m-%Y %X') %></small>
      </h2>
    </div>
  </div>
  <div class="row invoice-info">
    <div class="col-sm-12 invoice-col table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
        <tr class="thcolor">
          <th style="font-size: 11px;">Identificación</th>
          <th style="font-size: 11px;">Beneficiario</th>
          <th style="font-size: 11px;">Correo Electronico</th>
          <th style="font-size: 11px;" class="text-center">Referencia</th>
          <th style="font-size: 11px;" class="text-center">Estado</th>
          <th style="font-size: 11px; background-color: red;">Nro Obligación</th>
          <th style="font-size: 11px; background-color: #00a65a;" class="text-right">Valor del Pago</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td style="font-size: 11px;"><%= @personasobligacion.persona.identificacion rescue nil %></td>
          <td style="font-size: 11px;"><%= @personasobligacion.persona.nombre_completo rescue nil %></td>
          <td style="font-size: 11px;"><%= @personasobligacion.persona.email rescue nil %></td>
          <td style="font-size: 11px;" class="text-center"><%= @personasoblrecibo.id rescue nil %></td>
          <th style="font-size: 11px;" class="text-center"><i class="fa fa-exclamation"></i> Pago Fallido</th>
          <td style="font-size: 11px;"><%= @personasobligacion.nro_obligacion rescue nil %></td>
          <td style="font-size: 11px;" class="text-right">$<%= camponumerico @valor rescue 0 %></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <%= image_tag('paymentez.png', width: '250px;', height: '100px;') %>
    </div>
    <div class="col-xs-6" style="padding-top: 25px">
      <%= link_to root_path do %>
        <button type="button" class="btn btn-danger pull-right" style="margin-right: 5px;padding-right: 5px">
          <i class="fa fa-arrow-circle-left" style="padding-right: 5px"></i>Regresar al Inicio
        </button>
      <% end %>
    </div>
  </div>
</section>