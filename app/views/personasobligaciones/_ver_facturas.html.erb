<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">×</span></button>
  <h4 class="modal-title">Facturas - Nro Obligación <%= @personasobligacion.nro_obligacion rescue nil %></h4>
</div>
<div class="modal-body">
  <div class="box-header">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-bordered">
          <thead>
          <tr class="thcolor">
            <th style="font-size: 11px;"></th>
            <th style="font-size: 11px;">Fecha</th>
          </tr>
          </thead>
          <tbody>
          <% file = ""
            @planesfacturas.each do |planesfactura|
            file = "Fact_#{planesfactura.obligacion}_#{planesfactura.fecha_corte.strftime('%m')}_#{planesfactura.fecha_corte.strftime('%Y')}.pdf"
            documento = File.join(Rails.root, "public", "facturas","#{file}")
            if File.file?(documento).present?
          %>

              <tr>
                <td style="font-size: 11px;" class="text-center">
                  <%= link_to download_personasobligaciones_path(id: planesfactura.id), data: { toggle: 'tooltip' }, title: 'Factura de Pago', onclick: 'window.open(this.href,"new_window","height=700,width=950,scrollbars=yes");return false;' do %>
                    <i class="fa fa-file-pdf-o fa-fw text-success" aria-hidden="true"></i>
                  <% end %>
                </td>
                <td style="font-size: 11px;">
                  <%= planesfactura.periodo %>
                </td>
              </tr>
            <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>