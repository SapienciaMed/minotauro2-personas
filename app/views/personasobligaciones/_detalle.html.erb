   @is_auth_c_personapazysalvo = cadper.include?('personapazysalvo') ? true : false
   @is_auth_c_imagenpersonapazysalvo = cadper.include?('imagenpersonapazysalvo') ? true : false
   @is_auth_c_autorizarpersonapazysalvo = cadper.include?('autorizarpersonapazysalvo') ? true : false
   @is_auth_c_verpersonapazysalvo = cadper.include?('verpersonapazysalvo') ? true : false
