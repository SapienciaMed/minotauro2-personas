      <%= link_to edit_persona_path(etapa: "A", id: @personasobligacion.persona_id), data: { toggle: 'tooltip' }, title: "#{t :regresar}" do %>
        <i class="fa fa-arrow-left fa-fw text-success" aria-hidden="true"></i>
      <% end %>
    <% else %>
      <%= link_to edit_persona_path(etapa: "F", id: @personasobligacion.persona_id), data: { toggle: 'tooltip' }, title: "#{t :regresar_obligacion}" do %>
