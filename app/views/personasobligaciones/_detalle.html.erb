   @is_auth_c_personasobligacioncontrol = cadper.include?('personasobligacioncontrol') ? true : false
   @is_auth_c_personasobligacionpazysalvo = cadper.include?('personasobligacionpazysalvo') ? true : false
   @is_auth_c_cambioiniciocuotas = cadper.include?('cambioiniciocuotas') ? true : false
   @is_auth_c_cambiovaloresmanual = cadper.include?('cambiovaloresmanual') ? true : false

   @is_auth_e_personasoblnota = is_auth_e('personasoblnota')
   @is_auth_e_personasobligacion = is_auth_e('personasobligacion')
