$(".alert_flash").fadeOut(300, function() {
	$(this).remove();
});

<% if @personasobligaciones.count == 1 %>
	$("#personasobligaciones").html("<%= j render 'tabla' %>");
<% else %>
	$("#tbody_personasobligaciones").prepend("<%= j render 'tr', personasobligacion: @personasobligacion %>");
<% end %>

$(".clean").val("").trigger('change');

$('[data-toggle="tooltip"]').tooltip();

$("#personasobligacion_form").collapse("hide");

$(".flash_messages").html("<%= j render 'layouts/flash_messages' %>");

$(".form-group").removeClass("has-error");
$(".form-group > .help-block.help-block-error").remove();

setTimeout(function() {
	$(".alert_flash").fadeOut(300, function() {
		$(this).remove();
	});
}, 5000);
