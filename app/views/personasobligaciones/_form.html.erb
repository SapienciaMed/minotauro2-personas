<%= simple_form_for([@persona, @personasobligacion], remote: true) do |f| %>
  <div class="bs-callout">
    <div class="row">
      <div class="col-md-12">
        <%= button_tag 'Ã—', type: 'button', data: { target: '#personasobligacion_form' }, class: 'close cancel_button', aria_hidden: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2"><%= f.input :fecha_matricula, as: :datetime_picker, input_html: { data: { date_options: { format: 'DD/MM/YYYY', ignoreReadonly: true } }, class: 'clean', readonly: true }, label: 'Fecha Matricula' %></div>
      <div class="col-md-2"><%= f.input :nro_obligacion %></div>
      <div class="col-md-2"><%= f.input :valor, as: :moneda, label: 'Valor', input_html: { class: 'clean' } %></div>
      <div class="col-md-2"><%= f.input :reestruc_vlr_otros, as: :moneda, label: 'Valor Otros', input_html: { class: 'clean' } %></div>
      <div class="col-md-1"><%= f.input :plazo, input_html: { class: 'clean' } %></div>
      <div class="col-md-2"><%= f.input :tasa_ipc, label: 'IPC', input_html: { class: 'clean' } %></div>
      <div class="col-md-1"><%= f.input :tasa_puntos, label: 'Spreed', input_html: { class: 'clean' } %></div>
    </div>
    <div class="row">
      <div class="col-md-3"><%= f.input :fondo, as: :select, collection: select_fondo, input_html: { class: 'select2 clean' } %></div>
      <div class="col-md-3"><%= f.input :pac, as: :select, collection: select_pac, input_html: { class: 'select2 clean' } %></div>
      <div class="col-md-6"><%= f.input :userresponsable_id, label: 'Analista', collection: User.where("persona_id is null").order('nombre').collect { |p| [p.nombre, p.id] }, as: :select, input_html: { class: 'clean select2' } %></div>
    </div>
    <div class="row">
      <div class="col-md-2"><%= f.input :tasa_mercado, label: 'Tasa Mercado', input_html: { class: 'clean' } %></div>
      <div class="col-md-2"><%= f.input :tasa_mora, label: 'Tasa Mora', input_html: { class: 'clean' } %></div>
      <div class="col-md-2"><%= f.input :tipo_amortizacion, as: :select, collection: select_amortizacion, input_html: { class: 'select2 clean' } %></div>
      <div class="col-md-2"><%= f.input :insolvencia, as: :select, collection: select_sino, input_html: { class: 'select2 clean' } %></div>
      <div class="col-md-4"><%= f.input :observacion, as: :text, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean', maxlength: 3999, :rows => "3" }, label: 'Observaciones' %></div>
    </div>
    <div class="box-footer">
      <div class="box-tools pull-right">
        <%= f.button :submit, "Crear obligacion", class: "btn btn-danger" %>
      </div>
    </div>
  </div>
<% end %>
