<div class="box box-primary">
  <div class="box-header" style="margin-bottom: -32px;">
      <legend>Obligaciones</legend>
    <div class="box-tools pull-right">
      <% if is_auth_c('personasobligacion') %>
        <%= link_to new_persona_personasobligacion_path(@persona), remote: true, id: 'link_new_personasobligacion', class: 'btn btn-sm btn-success' do %>
          <i class="fa fa-plus-square"> </i> <span><%=t :agregar%></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="box-body">
    <div class="row">
      <div class="col-md-12">
        <div class="flash_messages"></div>
        <div id="personasobligacion_form" class="collapse"></div>
        <div id="personasobligaciones">
          <% if @persona.personasobligaciones.any? %>
              <%= render 'personasobligaciones/tabla' %>
          <% else %>
            <div class="alert alert-warning"><h4><i class="icon fa fa-info"></i> <%=t :atencion%></h4><%=t :atencion_msj%></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
