
<%= simple_form_for [@persona, @personascodeudor], remote: true do |f|   %>
  <div class="bs-callout">
    <div class="row">
      <div class="col-md-2"><%= f.input :identificacion, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
      <div class="col-md-3"><%= f.input :primer_nombre, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
      <div class="col-md-2"><%= f.input :segundo_nombre, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
      <div class="col-md-3"><%= f.input :primer_apellido, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
      <div class="col-md-2"><%= f.input :segundo_apellido, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
    </div>
    <div class="row">
      <div class="col-md-6"><%= f.input :direccion_trabajo, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
      <div class="col-md-3"><%= f.input :telefono_oficina, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
      <div class="col-md-3"><%= f.input :celular_secundario, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
    </div>
    <div class="row">
      <div class="col-md-6"><%= f.input :direccion_casa, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
      <div class="col-md-3"><%= f.input :telefono_casa, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
      <div class="col-md-3"><%= f.input :celular, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
    </div>
    <div class="row">
      <div class="col-md-3"><%= f.input :email, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
      <div class="col-md-3"><%= f.input :email_secundario, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
      <div class="col-md-3"><%= f.input :ciudad, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
      <div class="col-md-3"><%= f.input :departamento, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean' } %></div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <% if @personascodeudor.new_record? %>
          <%= button_tag "#{t :cancelar}", type: 'button', data: { target: '#personascodeudor_form' }, class: 'cancel_button btn btn-flat btn-default  pull-left', aria_hidden: true %>
        <% else %>
          <%= link_to "#{t :cancelar}", persona_personascodeudor_path(@persona, @personascodeudor), class: 'btn btn-flat btn-default pull-left', aria_hidden: true, remote: true %>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= f.button :button, "#{t :guardar}", data: { disable_with: "#{t :procesando}" }, class: 'btn btn-danger pull-right' %>
      </div>
    </div>
  </div>
<% end %>