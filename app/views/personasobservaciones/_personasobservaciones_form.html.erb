
<%= simple_form_for [@persona, @personasobservacion], remote: true do |f|   %>
  <div class="bs-callout">
    <div class="row">
      <div class="col-md-3"><%= f.input :tipo, as: :select, collection: select_tiposatencion, input_html: { data: { width: '100%' }, class: 'select2 clean' }, label: 'Tipo de Atención' %></div>
      <div class="col-md-3"><%= f.input :tiposestado_id, as: :select, collection: select_tiposestado.collect { |p| [p.descripcion, p.id] }, input_html: { data: { width: '100%' }, class: 'select2 clean', include_blank: true }, label: 'Estado del deudor' %></div>
      <div class="col-md-6"><%= f.input :observacion, as: :text, input_html: { onChange: 'javascript:this.value=this.value.toUpperCase();', class: 'input_uppercase clean', maxlength: 3999, :rows => "8" }, label: 'Observaciones' %></div>
    </div>
    <div class="row">
      <div class="col-md-4"><%= f.input :situacion_econo, as: :select, collection: select_situacion_econo, input_html: { data: { width: '100%' }, class: 'select2 clean' }, label: 'Situación economica del beneficiario'  %></div>
      <div class="col-md-6"><%= f.input :situacion_bene, as: :select, collection: select_situacion_bene, input_html: { data: { width: '100%' }, class: 'select2 clean' }, label: 'Situación educ. superior beneficiario'  %></div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <% if @personasobservacion.new_record? %>
          <%= button_tag "#{t :cancelar}", type: 'button', data: { target: '#personasobservacion_form' }, class: 'cancel_button btn btn-flat btn-default  pull-left', aria_hidden: true %>
        <% else %>
          <%= link_to "#{t :cancelar}", persona_personasobservacion_path(@persona, @personasobservacion), class: 'btn btn-flat btn-default pull-left', aria_hidden: true, remote: true %>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= f.button :button, "#{t :guardar}", data: { disable_with: "#{t :procesando}" }, class: 'btn btn-danger pull-right' %>
      </div>
    </div>
  </div>
<% end %>
